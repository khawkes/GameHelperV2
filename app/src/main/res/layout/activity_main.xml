<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_main_horizontal_margin"
    android:paddingRight="@dimen/activity_main_horizontal_margin"
    android:paddingTop="@dimen/activity_main_vertial_margin"
    android:paddingBottom="@dimen/activity_main_vertial_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnTakePicture"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnProcess"
            android:id="@+id/btnProcess"
            android:layout_alignTop="@+id/btnTakePicture"
            android:layout_toEndOf="@+id/btnTakePicture" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnReturn"
            android:id="@+id/btnReturn"
            android:layout_alignTop="@+id/btnTakePicture"
            android:layout_toEndOf="@+id/btnProcess" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnGray"
            android:id="@+id/btnShowGray"
            android:layout_below="@id/btnTakePicture"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnHistogram"
            android:id="@+id/btnShowHistogram"
            android:layout_alignTop="@id/btnShowGray"
            android:layout_toEndOf="@+id/btnShowGray" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnPeaks"
            android:id="@+id/btnShowPeaks"
            android:layout_alignTop="@id/btnShowHistogram"
            android:layout_toEndOf="@+id/btnShowHistogram" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnShapes"
            android:id="@+id/btnShowShapes"
            android:layout_alignTop="@id/btnShowPeaks"
            android:layout_toEndOf="@+id/btnShowPeaks" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnFinal"
            android:id="@+id/btnShowFinal"
            android:layout_alignTop="@id/btnShowShapes"
            android:layout_toEndOf="@+id/btnShowShapes" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnOriginal"
            android:id="@+id/btnShowOriginal"
            android:layout_alignTop="@id/btnShowFinal"
            android:layout_toEndOf="@+id/btnShowFinal" />

        <Space
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:id="@+id/spcButtons"
            android:layout_alignTop="@id/btnTakePicture"
            android:layout_toEndOf="@+id/btnReturn" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:id="@+id/txtColorReduce"
            android:minWidth="80dp"
            android:width="80dp"
            android:layout_alignBottom="@+id/btnReturn"
            android:layout_toEndOf="@+id/spcButtons"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/txtBlurSize"
            android:minWidth="80dp"
            android:width="80dp"
            android:layout_alignBottom="@+id/btnReturn"
            android:layout_toEndOf="@+id/txtColorReduce"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberSigned" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/txtBlurSigmaX"
            android:layout_alignBottom="@+id/btnReturn"
            android:layout_toEndOf="@+id/txtBlurSize"
            android:minWidth="80dp"
            android:width="80dp"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberSigned" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/txtThreshold1"
            android:layout_alignBottom="@+id/btnReturn"
            android:layout_toEndOf="@id/txtBlurSigmaX"
            android:minWidth="80dp"
            android:width="80dp"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberSigned" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.0"
            android:id="@+id/txtThreshold2"
            android:layout_alignBottom="@+id/btnReturn"
            android:layout_toEndOf="@+id/txtThreshold1"
            android:minWidth="80dp"
            android:width="80dp"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/countText"
            android:layout_alignBottom="@+id/btnShowOriginal"
            android:layout_toEndOf="@+id/btnShowOriginal"
            android:maxLength="100"
            android:minHeight="35dp"
            android:text="countText"
            android:minWidth="100dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:contentDescription="@string/imgDescr"
        android:layout_marginTop="5dp" />

</LinearLayout>
